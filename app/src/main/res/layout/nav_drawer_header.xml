<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:gravity="bottom"
    android:padding="20dp"
    android:background="@color/colorPrimary"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:id="@+id/nav_drawer_header_id">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/nav_drawer_header_icon"
        android:src="@mipmap/ic_launcher_round"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="Not signed in"
        android:textColor="@color/EasyWhite"
        android:id="@+id/nav_drawer_header_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/EasyWhite"
        android:id="@+id/nav_drawer_header_email"
        android:text="Not signed in"/>

</LinearLayout>